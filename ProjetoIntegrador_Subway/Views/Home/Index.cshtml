@{
    if (User.IsInRole("Gerente"))
    {
        <center>
            <div class="row" style="margin-left: 300px">
                <div class="col-md-4">
                    <img src="~/Imagens/if_Food_C216_2427860.png" class="img-menu" />
                    <p>Para cadastrar novos produtos,<br /> clique no botão abaixo:</p>
                    <a class="btn btn-default" href="/Produtos/Create"> Cadastro de produtos &raquo;</a>
                </div>

                <div class="col-md-4">
                    <img src="~/Imagens/if_business-work_14_2377634.png" class="img-menu" />
                    <p>Para cadastrar novos funcionários ou clientes, clique no botão abaixo:</p>
                    <p><a class="btn btn-default" href="/Account/Register"> Cadastro de pessoas &raquo;</a></p>
                </div>
            </div>
        </center>
    }
    else if (User.IsInRole("Caixa"))
    {
        <center>
            <div class="row" style="margin-left: 300px; margin-top: 10px">
                <div class="col-md-4">
                    <img src="~/Imagens/pedidoFechado.png" class="img-menu"/>
                    <p>Para vizualizar pedidos fechados,<br /> clique no botão abaixo:</p>
                    <a class="btn btn-default" href="/Pedidos/PedidoFechado"> Visualizar pedidos fechados &raquo;</a>
                </div>

                <div class="col-md-4">
                    <img src="~/Imagens/pedidoPago.png" class="img-menu" style="height: 130.84px; width: 54%"/>
                    <p>Para vizualizar pedidos pagos, clique no botão abaixo:</p>
                    <p><a class="btn btn-default" href="/Pedidos/PedidoPago"> Visualizar pedidos pagos &raquo;</a></p>
                </div>
            </div>
        </center>
    }
    else if (User.IsInRole("Estoquista"))
    {
        <center>
            <div class="row">
                <div class="col-md-4 col-centered">
                    <img src="~/Imagens/if_Food_C216_2427860.png" class="img-menu" />
                    <p>Para inserir produtos no estoque,<br /> clique no botão abaixo:</p>
                    <a class="btn btn-default" href="/Produtos/Index"> Inserir produtos &raquo;</a>
                </div>
            </div>
        </center>
    }
    else
    {
        <center>
            <div class="row" style="margin-top: 10px; margin-left: 300px">
                @*<div class="col-md-4">
                    <img src="~/Imagens/cardapio.png" class="img-menu" style="height: 147.59px !important" />
                    <p>Para vizualizar nosso cardápio,<br /> clique no botão abaixo:</p>
                    <a class="btn btn-default" href="#"> Cardápio &raquo;</a>
                </div>*@

                <div class="col-md-4">
                    <img src="~/Imagens/monteLanche.png" class="img-menu" />
                    <p>Para montar seu lanche,<br /> clique no botão abaixo:</p>
                    <p><a class="btn btn-default" href="/Pedidos/Index"> Montar lanche &raquo;</a></p>
                </div>

                <div class="col-md-4">
                    <img src="~/Imagens/pedidos.png" class="img-menu" />
                    <p>Para vizualizar seus pedidos,<br /> clique no botão abaixo:</p>
                    <p><a class="btn btn-default" href="/Pedidos/TodosPedidos"> Meus pedidos &raquo;</a></p>
                </div>
            </div>
        </center>
    }

}

@section Scripts{
    <script type="text/javascript">
        $('.carousel').carousel({
            interval: 2900
        });
    </script>
}