@model IEnumerable<ProjetoIntegrador_Subway.Models.Pedido>

@{
    /**/

    ViewBag.Title = "Pedidos Fechados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-centered">
        <center><h3>Pedidos finalizados</h3></center>
    </div>
</div>

<table class="table table-hover table-bordered" style="background-color: white !important">
    <tr>
        <th>
            <center>
                @Html.DisplayNameFor(model => model.ID)
            </center>
        </th>
        <th>
            <center>
                @Html.DisplayNameFor(model => model.nomeCliente)
            </center>
        </th>
        <th>
            <center>
                @Html.DisplayNameFor(model => model.dataPedido)
            </center>
        </th>
        <th>
            <center>
                @Html.DisplayNameFor(model => model.valorTotal)
            </center>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomeCliente)
            </td>
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.dataPedido)
                </center>
            </td>
            <td>
                <center>
                    R$ @Html.DisplayFor(modelItem => item.valorTotal)
                </center>
            </td>
            <td>@Html.ActionLink("Confirmar pagamento", "confirmarPgt", new { id = item.ID })</td>
        </tr>
    }

</table>
