@model IEnumerable<ProjetoIntegrador_Subway.Models.Pedido>

@{
    /**/

    ViewBag.Title = "TodosPedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-centered">
        <center><h3>Todos os pedidos</h3></center>
    </div>
</div>

<table class="table table-hover table-bordered" style="background-color: white !important">
    <tr>
        <th>
            <center>
                @Html.DisplayNameFor(model => model.ID)
            </center>
        </th>
        <th>
            <center>
                @Html.DisplayNameFor(model => model.dataPedido)
            </center>
        </th>
        <th>
            <center>
                Tipo de pagamento
            </center>
        </th>
        <th>
            <center>
                @Html.DisplayNameFor(model => model.valorTotal)
            </center>
        </th>
    </tr>
    
    @foreach (var item in Model)
    {
         <tr onclick="openDetails(@item.ID);">
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.ID)
                </center>
            </td>
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.dataPedido)
                </center>
            </td>
            @if (item.CEP == null)
            {
            <td>
                Dinheiro
            </td>
            }
            else
            {
                <td>
                    Cartão
                </td>
            }
            <td>
                <center>
                    R$ @Html.DisplayFor(modelItem => item.valorTotal)
                </center>
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-default" })
</p>

<script type="text/javascript">
    function openDetails(id) {
        window.location = "/Pedidos/Details/"+id+"";
    }
</script>
